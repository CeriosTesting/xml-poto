{
	"name": "@cerios/xml-poto",
	"version": "1.1.1",
	"author": "Ronald Veth - Cerios",
	"description": "TypeScript XML serialization library with decorator-based metadata. Supports namespaces, custom converters, validation, wrapped/unwrapped arrays, and bidirectional XML-object mapping.",
	"license": "MIT",
	"keywords": [
		"typescript",
		"xml",
		"serialization",
		"deserialization",
		"decorators",
		"xml-parser",
		"xml-serializer",
		"metadata",
		"namespaces",
		"validation",
		"converter",
		"mapper",
		"xmlroot",
		"xmlelement",
		"xmlattribute",
		"cerios",
		"xbrl",
		"bi-directional"
	],
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": ["dist"],
	"type": "commonjs",
	"sideEffects": false,
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		},
		"./package.json": "./package.json"
	},
	"bugs": {
		"url": "https://github.com/CeriosTesting/xml-poto/issues"
	},
	"homepage": "https://github.com/CeriosTesting/xml-poto#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CeriosTesting/xml-poto.git"
	},
	"scripts": {
		"biome:migrate": "biome migrate --write",
		"build": "tsup",
		"changeset": "npx changeset",
		"changeset:version": "changeset version && npm i",
		"changeset:publish": "node -e \"if (!process.env.CI) { console.error('‚ùå Publishing is only allowed from CI/CD'); process.exit(1); }\" && changeset publish --provenance",
		"check": "biome check --write",
		"check-exports": "attw --pack .",
		"compile": "tsc --noEmit",
		"dev": "tsc --watch",
		"lint": "biome lint",
		"prepare": "husky",
		"test": "vitest",
		"test:coverage": "vitest --coverage",
		"test:watch": "vitest --watch",
		"update-all-packages": "npx npm-check-updates -u && npm i"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.18.2",
		"@biomejs/biome": "2.3.6",
		"@changesets/cli": "^2.29.7",
		"@types/node": "^24.10.1",
		"@vitest/ui": "^2.1.2",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.6",
		"npm-check-updates": "^19.1.2",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3",
		"vitest": "^2.1.2"
	}
}
